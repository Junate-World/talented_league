# League Site - Environment Variables
# Copy to .env and fill in values

# Local development - uses SQLite by default (no DATABASE_URL needed)

# Production (Supabase) - required
SECRET_KEY=your-secret-key-change-this
# From Supabase: Project Settings > Database > Connection string (URI)
# Use "Transaction" pooler for SQLAlchemy
DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres

# Cloudinary (production) - for team logos and player photos
# From Cloudinary Dashboard: Settings > Access Keys
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Optional
# FLASK_ENV=development
# FLASK_DEBUG=1
